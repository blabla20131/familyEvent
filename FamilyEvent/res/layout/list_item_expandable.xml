<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide_menu_title_bg01" >

    <ImageView
        android:id="@+id/expandable_item_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/expandable_item_group_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:layout_toRightOf="@+id/expandable_item_img"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/expandable_item_child_text_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expandable_item_group_text_view"
        android:textSize="14sp"
        android:padding="15dp"
         />

</RelativeLayout>